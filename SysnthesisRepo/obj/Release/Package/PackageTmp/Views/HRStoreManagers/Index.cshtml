<script type="text/x-template" id="toggleSwitchTemplate">
    <div class="toggle-switch">
        ${if(Status != "Inactive")}
        <input type="checkbox" id="${StoreId}^${StoreName}" checked class="toggle-input" onclick="javascript:toggle(this);" style="display:none" value="on" />
        ${else}
        <input type="checkbox" id="${StoreId}^${StoreName}" class="toggle-input" onclick="javascript:toggle(this);" style="display:none" value="off" />
        ${/if}
        <label for="${StoreId}^${StoreName}" class="toggle-label"></label>
    </div>
</script>
