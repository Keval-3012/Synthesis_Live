@model List<EntityModels.Models.PayrollAnalysisList>
@using Utility
@{
    decimal Total = 0;
    decimal Totalpercentage = 0;
    decimal Hours = 0;
    decimal Minute = 0;
    string TotalHours = "";
    int i = 1;
}
<style>
    .clsbutton {
        font-weight: bold;
        color: black;
        font-size: 16px;
        background: #eaeaea !important;
        /* padding: 10px !important;*/
        border-radius: 5px !important;
        width: 24px !important;
        height: 24px !important;
        display: inline-block;
        text-align: center;
        align-items: center;
        vertical-align: middle;
        border: 1px solid rgba(0,0,0,0.2);
    }
    .clsbutton1 {
        font-weight: bold;
        color: black;
        font-size: 16px;
        background: #eaeaea !important;
        /* padding: 10px !important;*/
        border-radius: 5px !important;
        width: 24px !important;
        height: 24px !important;
        display: inline-block;
        text-align: center;
        align-items: center;
        vertical-align: middle;
        border: 1px solid rgba(0,0,0,0.2);
    }

    .clsbutton2 {
        font-weight: bold;
        color: black;
        font-size: 16px;
        background: #eaeaea !important;
        /* padding: 10px !important;*/
        border-radius: 5px !important;
        width: 24px !important;
        height: 24px !important;
        display: inline-block;
        text-align: center;
        align-items: center;
        vertical-align: middle;
        border: 1px solid rgba(0,0,0,0.2);
    }
</style>
<a title=Collapsed id="" onclick="getalldatacollapse1(this)" href=#><span class="clsbutton1" id="MainCollapse" title="collaped">+</span></a>
<table class="table table-bordered table-condensed tablesorter" id="ratioTbl">
    <thead>
        <tr>
            <th><a style="color:#fff; text-decoration:none; cursor:pointer;">Department</a> </th>
            <th><a style="color:#fff; text-decoration:none; cursor:pointer;">Payroll Amount</a></th>
            <th><a style="color:#fff; text-decoration:none; cursor:pointer;">Payroll Breakdown %</a></th>
            <th><a style="color:#fff; text-decoration:none; cursor:pointer;">Payroll Hours</a></th>
            <th style="display:none"></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {

            var Class = "row" + i;
            var ImgCls = "img" + i;
        <tr class="@Class">
            <td><a title=Collapsed id="" onclick="getStoreWiseData('@item.DepartmentName',@i,this)" href=#><span class="clsbutton" id="@ImgCls" title="collaped">+</span></a> @Html.Raw(item.DepartmentName)</td>
            <td>$@Html.Raw(AdminSiteConfiguration.PriceWithComma(item.PayrollAmount.ToString()))</td>
            @if (AdminSiteConfiguration.PriceWithComma(item.PayrollPercentage.ToString()) == "0.00")
            {
                <td style="padding-left:40px;">--</td>
            }
            else
            {
                @*<td>@Html.Raw(item.PayrollPercentage.ToString()) %</td>*@
                <td style="padding-left:40px;">--</td>
            }
                <td>@item.PayrollHours</td>
            <td style="display:none">@item.PayrollDepartmentId</td>
        </tr>
            {
                Total += Convert.ToDecimal(item.PayrollAmount);
                Totalpercentage += Convert.ToDecimal(item.PayrollPercentage);
                string[] data = item.PayrollHours.Split(':');
                Hours = Hours + Convert.ToDecimal(data[0]);
                Minute = Minute + Convert.ToDecimal(data[1]);

                Hours = Hours + Convert.ToInt32(Minute / 60);
                Minute = Minute - (Convert.ToInt32(Minute / 60) * 60);
                Minute = Minute % 60;

                TotalHours = Hours.ToString() + ":" + Minute.ToString();
            }
            i = i + 1;
        }
    </tbody>
    <tfoot>
        <tr class="invoicetotalcountbox1">
            <td><h3 style="margin-left:20px;">&nbsp;</h3></td>
            <td style="padding:10px 20px !important;" class="invoiceamt">
                <span style="font-size:15px;"><a title=Collapsed id="FinalRow" onclick="getStoreWiseTotalData(@i,this)" href=#><span class="clsbutton2" title="collaped" id="FinalRows">+</span></a>&nbsp;&nbsp;Total Payroll Amount </span>$ @AdminSiteConfiguration.PriceWithComma(Total.ToString())
                <table class='table table-bordered table-condensed tablesorter' id='tbl11'></table>
            </td>
            <td style="padding:10px 20px !important;" class="invoiceamt"><span style="font-size:15px;">Avg Payroll Breakdown (%) </span>@AdminSiteConfiguration.PriceWithComma(Totalpercentage.ToString()) %</td>
            <td style="padding:10px 20px !important;" class="invoiceamt"><span style="font-size:15px;">Total Hours: </span>@TotalHours</td>
        </tr>
    </tfoot>


</table>


