@model IEnumerable<EntityModels.Models.DeleteHourlyFilesModel>
@using EntityModels.Models
@using Utility

@{
    Layout = null;
    DBContext db = new DBContext();
}

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th style="text-align:left">File Name</th>
                <th class="text-align-left">Start Date</th>
                <th style="text-align:left">Hour Sequence</th>
                <th class="text-align-center">Action</th>
            </tr>
        </thead>
        <tbody>

            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    
                    <tr class="even datagrid">
                        <td class="fntlight" style="width:22%;text-align:left">
                            <a href="@System.Configuration.ConfigurationManager.AppSettings["LocalFilePath"].ToString()@item.FileName " target="_blank">
                                @item.FileName
                            </a>
                        </td>
                        <td class="fntlight text-align-left">@Html.Raw((Convert.ToDateTime(item.StartDate)).ToString("MM/dd/yyyy"))</td>
                        <td class="fntlight" style="text-align:left">@Html.Raw(item.HSequence)</td>
                        <td style="text-align:center" class="text-align-center">
                            @{
                                var UserIdD = item.Id + "D";
                            }
                            <a href="#" onclick="return ComfirmDelete(@item.Id);" detail="@item.FileName - Delete" data-toggle="tooltip" data-placement="top" data-original-title="Delete"><img src="~/Content/Admin/images/trash-2.svg" alt="" /> </a>
                            <div id="@UserIdD" class="divIDClass modal-popup modal-danger modal-message " style="position: fixed;  left:45%; width:300px; top: 10px; display:none">
                                <div class="modal-content ">
                                    <div class="modal-header text-center">
                                        <i class="glyphicon glyphicon-trash"></i>
                                    </div>
                                    <div class="modal-title">Message</div>
                                    <div class="modal-body ">Are you sure you want to delete this Hourly File?</div>
                                    <div class="modal-footer" style="text-align:center">
                                        <a class="btn btn-danger" detail="Delete -" onclick="Delete(@item.Id);">Ok </a>
                                        <a class="btn" data-dismiss="modal" detail="Delete -" onclick="closemodal()">Cancel</a>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

