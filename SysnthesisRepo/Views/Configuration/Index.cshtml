@model EntityModels.Models.Configuration
@using Utility;
@{
    Layout = "~/Views/Shared/AdminMAster.cshtml";
}

<div class="animate-panelmessesgarea padbtmzero">
    @if (Convert.ToString(ViewBag.StatusMessage) == "Success")
    {
        <script>
            MyCustomAlert("Configuration Saved Successfully", 1);
        </script>
    }
    @if (Convert.ToString(ViewBag.StatusMessage) == "NoStoreSelected")
    {
        <script>
            PopUpSelectStore();
        </script>
    }
</div>
<div id="popupStoreAlert" class="divIDClass modal-popup modal-danger modal-message max_widht300" style="position: fixed; display:none">
    <div class="modal-content ">
        <div class="modal-header text-center">
            <i class="glyphicon glyphicon-fire"></i>
        </div>
        <div class="modal-title">No Store Selected</div>
        <div class="modal-body ">Please Select Store.</div>
        <div class="modal-footer " style="text-align:center">
            <a class="btn btn-danger" data-dismiss="modal" onclick="closemodal()" ;>Ok </a>
        </div>
    </div>
</div>

@using (Html.BeginForm("Index", "Configuration", FormMethod.Post, new { enctype = "multipart/form-data", id = "frm1" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="special_new">
        <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
            <div class="panel panel-default" style="display:none;">
                <div class="panel-heading" role="tab" id="headingOne">
                    <h4 class="panel-title">
                        <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            Default Accounts
                        </a>
                    </h4>
                </div>
                <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                    <div class="panel-body">
                        <div class="datagrid " style="margin-top:0px;">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr class="bg_green">
                                            <th style="width:250px;">
                                                <span>Default Account</span>
                                            </th>
                                            <th style="width:250px;">
                                                <span>Debit</span>
                                            </th>
                                            <th style="width:250px;">
                                                <span>Credit</span>
                                            </th>
                                            <th style="width:250px;">
                                                <span>QB Account</span>
                                            </th>
                                            <th>
                                                <span>Memo</span>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            if (Model.Configrationlist != null)

                                            {
                                                if (Model.Configrationlist.Count() > 0)
                                                {
                                                    var i = 0;
                                                    foreach (var item in Model.Configrationlist.Where(x => x.flag == 0))
                                                    {
                                                        var groupidval = i.ToString() + "groupid";
                                                        var typicalbalid = i.ToString() + "typicalbal";
                                                        var Deptidval = i.ToString() + "Deptid";
                                                        var memoidval = i.ToString() + "memoid";
                                                        <tr>
                                                            <td class="whiteBlock">
                                                                <span style="font-size:large;"> @item.tendername</span>
                                                                @Html.Hidden("tendername", item.tendername)
                                                                @Html.Hidden("Storeid", item.Storeid)
                                                            </td>
                                                            <td class="whiteBlock">
                                                                @if (@item.typicalbalid == 1)
                                                                {
                                                                    @*@Html.DropDownList("groupid", new SelectList(item.GroupList, "Id", "Name", item.groupid), "Select Group", new { @class = "myval form-control", onchange = "BindGroupData(this.value," + i.ToString() + ")", name = "groupid", id = @groupidval })*@
                                                                }
                                                                else
                                                                {
                                                                    <text> - </text>
                                                                }
                                                            </td>
                                                            <td>
                                                                @if (@item.typicalbalid == 2)
                                                                {
                                                                    @*@Html.DropDownList("groupid", new SelectList(item.GroupList, "Id", "Name", item.groupid), "Select Group", new { @class = "myval form-control", onchange = "BindGroupData(this.value," + i.ToString() + ")", name = "groupid", id = @groupidval })*@
                                                                }
                                                                else
                                                                {
                                                                    <text> - </text>
                                                                }
                                                                <label id="@typicalbalid" style="display:none;"> @item.typicalbalance </label>
                                                                @Html.Hidden("typicalbalid", item.typicalbalid)
                                                                @Html.Hidden("ggID", item.ggID)
                                                            </td>
                                                            <td>
                                                                @Html.Hidden("groupid")
                                                                <label id="@Deptidval">@item.Deptname </label>
                                                                @Html.Hidden("Deptid", item.Deptid)
                                                            </td>
                                                            <td>
                                                                <label id="@memoidval"> @item.memo</label>
                                                                @Html.Hidden("memoidval", item.memo)
                                                                @Html.Hidden("Flag", item.flag)
                                                            </td>
                                                        </tr>
                                                        i++;
                                                    }
                                                    <tr>
                                                        <td colspan="5"></td>
                                                    </tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr><td colspan="2">No Data Found</td></tr>
                                            }
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading" role="tab" id="headingTwo">
                    <div>
                        <h4 class="panel-title">
                            <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
                                Tender Accounts
                            </a>
                        </h4>
                    </div>
                </div>
                <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">

                    <div class="panel-body">
                        <br />
                        <div class="btn_tow">
                            <span><input type="submit" value="Save" id="btnInvoiceSubmit" name="btnsubmit" class="btn_comman buttonbox btnsubmit" /></span>
                            <span><a href="#" class="btn btn_comman btn_cancel">Cancel</a></span>
                        </div>
                        <br />
                        <div class="datagrid " style="margin-top:0px;">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr class="bg_gray">
                                            <th style="width:250px;">
                                                <span>Default Account</span>
                                            </th>
                                            <th style="width:250px;">
                                                <span>Group</span>
                                            </th>
                                            <th style="width:250px;">
                                                <span>Typical Behaviour</span>
                                            </th>
                                            <th>
                                                <span>QB Account</span>
                                            </th>
                                            <th>
                                                <span>Memo</span>
                                            </th>
                                            @if (Roles.IsUserInRole("Administrator"))
                                            {
                                                <th style="width:100px;">
                                                    <span>Reset</span>
                                                </th>
                                            }
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @{
                                            if (Model.Configrationlist != null)

                                            {
                                                if (Model.Configrationlist.Count() > 0)
                                                {
                                                    var defaultcount = Model.Configrationlist.Where(x => x.flag == 0).Count();
                                                    var i = defaultcount;
                                                    foreach (var item in Model.Configrationlist.Where(x => x.flag == 1))
                                                    {

                                                        var groupidval = i.ToString() + "groupid";
                                                        var typicalbalid = i.ToString() + "typicalbal";
                                                        var Deptidval = i.ToString() + "Deptid";
                                                        var memoidval = i.ToString() + "memoid";
                                                        var ggID = i.ToString() + "ggID";
                                                        <tr>
                                                            <td class="whiteBlock">
                                                                <span style="font-size:large;"> @item.tendername</span>
                                                                @Html.Hidden("tendername", item.tendername)
                                                                @Html.Hidden("Storeid", item.Storeid)
                                                            </td>
                                                            <td class="whiteBlock">
                                                                @Html.DropDownList("groupid", new SelectList(item.GroupList, "Id", "Name", item.groupid), "Select Group", new { @class = "myval form-control", onchange = "BindGroupData(this.value," + i.ToString() + ")", name = "groupid", id = @groupidval })
                                                            </td>

                                                            <td>
                                                                <label id="@typicalbalid"> @item.typicalbalance </label>
                                                                @Html.Hidden("typicalbalid", item.typicalbalid)
                                                                @Html.Hidden("ggID", item.ggID)
                                                            </td>
                                                            <td>
                                                                <label id="@Deptidval">@item.Deptname </label>
                                                                @Html.Hidden("Deptid", item.Deptid)

                                                            </td>
                                                            <td>
                                                                <label id="@memoidval"> @item.memo</label>
                                                                @Html.Hidden("memoidval", item.memo)
                                                                @Html.Hidden("Flag", item.flag)
                                                            </td>
                                                            <td>
                                                                @if (Roles.IsUserInRole("Administrator"))
                                                                {
                                                                    <a href="javascript:void(0);"
                                                                       onclick="openResetPopup('@item.tendername', '@item.Storeid')"
                                                                       class="modl">
                                                                        <img src="/Content/Admin/images/icons8-reset-35.png" alt="" style="width:25px;" title="Reset" />
                                                                    </a>
                                                                }
                                                            </td>
                                                        </tr>
                                                        i++;
                                                    }
                                                    <tr>
                                                        <td colspan="5"></td>
                                                    </tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr><td colspan="2">No Data Found</td></tr>
                                            }
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading" role="tab" id="headingThree">
                    <div>
                        <h4 class="panel-title">
                            <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                Department Sales
                            </a>
                        </h4>
                    </div>
                </div>
                <div id="collapseThree" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingThree">
                    <div class="panel-body">
                        <br />
                        <div class="btn_tow">
                            <span><input type="submit" value="Save" id="btnInvoiceSubmit" name="btnsubmit" class="btn_comman buttonbox btnsubmit" /></span>
                            <span><a href="#" class="btn btn_comman btn_cancel">Cancel</a></span>
                        </div>
                        <br />
                        <div class="datagrid " style="margin-top:0px;">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr class="bg_gray">
                                            <th style="width:250px;">
                                                <span>Department</span>
                                            </th>
                                            <th style="width:250px;">
                                                <span>Group</span>
                                            </th>
                                            <th style="width:250px;">
                                                <span>Typical Behaviour</span>
                                            </th>
                                            <th>
                                                <span>QB Account</span>
                                            </th>
                                            <th>
                                                <span>Memo</span>
                                            </th>
                                            @if (Roles.IsUserInRole("Administrator"))
                                            {
                                                <th style="width:100px;">
                                                    <span>Reset</span>
                                                </th>
                                            }
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            if (Model.Configrationlist != null)

                                            {
                                                if (Model.Configrationlist.Count() > 0)
                                                {
                                                    var defaultcount = Model.Configrationlist.Where(x => x.flag == 0 || x.flag == 1).Count();
                                                    var j = defaultcount;
                                                    foreach (var item in Model.Configrationlist.Where(x => x.flag == 2))
                                                    {

                                                        var groupidval = j.ToString() + "groupid";
                                                        var typicalbalid = j.ToString() + "typicalbal";
                                                        var Deptidval = j.ToString() + "Deptid";
                                                        var memoidval = j.ToString() + "memoid";
                                                        var ggID = j.ToString() + "ggID";
                                                        <tr>
                                                            <td class="whiteBlock">
                                                                <span style="font-size:large;"> @item.tendername</span>
                                                                @Html.Hidden("tendername", item.tendername)
                                                                @Html.Hidden("Storeid", item.Storeid)
                                                            </td>
                                                            <td class="whiteBlock">
                                                                @Html.DropDownList("groupid", new SelectList(item.GroupList, "Id", "Name", item.groupid), "Select Group", new { @class = "myval form-control", onchange = "BindGroupData(this.value," + j.ToString() + ")", name = "groupid", id = @groupidval })
                                                            </td>

                                                            <td>
                                                                <label id="@typicalbalid"> @item.typicalbalance </label>
                                                                @Html.Hidden("typicalbalid", item.typicalbalid)
                                                                @Html.Hidden("ggID", item.ggID)
                                                            </td>
