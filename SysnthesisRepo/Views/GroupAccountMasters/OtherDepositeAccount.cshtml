</div>

<div id="grddata1">
    <div class="page-body headertopbox addinvoice" style="padding-top:18px!important;">
        <div class="datagrid">
            <div class="table-responsive">
                <table class="table table-striped table-hover select_set1" id="data_table1">
                    <thead>
                        <tr>
                            <th>Type</th>
                            <th style="width:15%!important">QB Account</th>
                            <th style="width:15%!important" class="text-right">Action</th>
                        </tr>
                    </thead>
                    <tbody id="data_body1">
                        @{
                                if (Model != null)
                                {
                                    if (Model.Count() > 0)
                                    {
                                        {
                                            foreach (var item in Model)
                                            {
                                                var Divnamelbl = "1Divnamelbl" + item.OtherDepositeSettingId;
                                                var DivQbAccountlbl = "1DivQbAccountlbl" + item.OtherDepositeSettingId;
                                                var DivQbAccountddl = "1DivQbAccountddl" + item.OtherDepositeSettingId;
                                                var EQBAccountReq = "1EQBAccountReq" + item.OtherDepositeSettingId;
                                                <tr class="even">
                                                    <td style="vertical-align:middle;text-align:left;">
                                                        <div id="@Divnamelbl">@Html.Raw(item.Name)</div>
                                                    </td>
                                                    <td style="vertical-align:middle;text-align:left;">
                                                        <div id="@DivQbAccountlbl">@Html.Raw(item.DepartmentMaster != null? item.DepartmentMaster.DepartmentName:"");</div>
                                                        <div id="@DivQbAccountddl" style="display:none">
                                                            @if (ViewBag.DepartmentList != null)
                                                            {
                                                                @Html.DropDownList("QB1".ToString(), new SelectList(ViewBag.DepartmentList, "value", "text", item.BankAccountId), "Select QB Account", new { @class = "myval", @id = "1EQBAccount_" + item.OtherDepositeSettingId })
                                                                <span class="highlight" id="@EQBAccountReq" style="display: none;">QB Account Is Required</span>
                                                            }
                                                        </div>
                                                    </td>
                                                    <td style="vertical-align:middle;text-align:right" class="img_with img_color">
                                                        <input type="hidden" id="ID" name="ID" value="@item.OtherDepositeSettingId" />
                                                        <a href="#" id="edit1_@item.OtherDepositeSettingId" onclick="return Edit1(@item.OtherDepositeSettingId);"><img src="~/Content/Admin/images/edit-2.svg" alt="" /></a>
                                                        <input type="submit" id="update1_@item.OtherDepositeSettingId" value="Update" onclick="return Updatedata1(@item.OtherDepositeSettingId)" name="" class="btn btnsavebox btn_orange" style="display: none;">
                                                        <input type="submit" id="cancel1_@item.OtherDepositeSettingId" value="Cancel" onclick="return Cancel1(@item.OtherDepositeSettingId)" name="" class="btn btnsavebox btn_orange" style="display: none;">
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="3" style="text-align:center;">
                                                No Data Available
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" style="text-align:center;">
                                            No Data Available
                                        </td>
                                    </tr>
                                }
                           
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
