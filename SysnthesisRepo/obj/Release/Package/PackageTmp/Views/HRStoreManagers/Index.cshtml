<div id="grddata">
    <div class="page-body headertopbox addinvoice" style="padding-top:0px!important;">
        <div class="control-section">
            @Html.EJS().Grid("HRStoreManager").AllowSorting().AllowFiltering().FilterSettings(filter => { filter.Type(Syncfusion.EJ2.Grids.FilterType.CheckBox); }).Created("created").SelectionSettings(sel => { sel.PersistSelection(true); }).EnableStickyHeader(true).AllowTextWrap().Columns(col =>
       {
           col.Field("StoreId").IsPrimaryKey(true).HeaderText("Store Id").Visible(false).Add();
           col.Field("StoreManageId").HeaderText("StoreManage Id").Visible(false).Add();
           col.Field("FirstName").HeaderText("Name").Width("250").Add();
           col.Field("UserName").HeaderText("UserName").Width("250").Add();
           col.Field("StoreName").HeaderText("Store Name").Width("250").Add();
           col.Field("IsActive").HeaderText("Status").EditType("booleanedit").DefaultValue(true).Width("100").AllowFiltering(false).Template("#toggleSwitchTemplate").Add();
           col.Field("Status").HeaderText("Action").Visible(false).Add();
       }).DataBound("dataBound").ActionBegin("actionBegin").ActionComplete("actionComplete").AllowPaging().PageSettings(page => { page.PageCount(2).PageSize(500); }).EditSettings(edit => { edit.AllowAdding(true).AllowEditing(true).Mode(Syncfusion.EJ2.Grids.EditMode.Dialog).Template("#dialogtemplates"); }).Toolbar(new List<string>() { "Add", "Edit", "Search" }).Render()
        </div>
    </div>
</div>
