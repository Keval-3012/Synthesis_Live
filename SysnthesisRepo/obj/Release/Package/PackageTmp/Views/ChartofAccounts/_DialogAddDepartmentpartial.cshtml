@using Syncfusion.EJ2
@using Syncfusion.EJ2.DropDowns
@model EntityModels.Models.DepartmentMaster

<div>
    <div class="form-row">
        <div class="form-group col-md-12">
            @Html.EJS().MultiSelect("MultiStoreId").Mode(VisualMode.Box).Placeholder("Select Store").Change("SetStoreDropDown").DataSource((IEnumerable<object>)ViewBag.MultiStoreId).Fields(new MultiSelectFieldSettings { Text = "Name", Value = "StoreId" }).Value((string[])ViewBag.val).FloatLabelType(Syncfusion.EJ2.Inputs.FloatLabelType.Always).Render()
            @Html.DropDownList("StoreId", null, "-- Select --", new { @class = "form-control", @id = "StoreId", @onchange = "SetdatabyStoreID();" })
         
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">

                @Html.TextBoxFor(model => model.DepartmentName, new { maxlength = 500, @class = "form-control", placeholder = "Name", @style = "text-transform: uppercase", disabled = true })
                @Html.Label("DepartmentName", "Display Name", new { @class = "e-float-text e-label-top" })
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                @Html.TextBoxFor(model => model.AccountNumber, new { maxlength = 6, @class = "form-control", placeholder = "Account Number", @style = "text-transform: uppercase", disabled = true  })
              
                @Html.Label("AccountNumber", "Account Number", new { @class = "e-float-text e-label-top" })
            </div>
        </div>
    </div>
