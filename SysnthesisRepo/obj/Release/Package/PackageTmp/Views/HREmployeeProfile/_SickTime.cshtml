@using Syncfusion.EJ2
@using Syncfusion.EJ2.DropDowns
@model EntityModels.HRModels.HREmployeeSickTimes

@Html.HiddenFor(m => m.EmployeeId)
@Html.HiddenFor(m => m.EmployeeChildId)
@Html.HiddenFor(m => m.EmployeeSickTimeId)
<div class="form-row">
    <div class="form-group col-md-12">
        @Html.EJS().DatePickerFor(m => m.sEffectiveDate).Placeholder("Effective Date").FloatLabelType(Syncfusion.EJ2.Inputs.FloatLabelType.Always).EnableMask(true).Format("MM/dd/yyyy").Render()
    </div>
    <div class="form-group col-md-12">
        @Html.EJS().DropDownListFor(m => m.TimeType).Fields(new Syncfusion.EJ2.DropDowns.DropDownListFieldSettings { Text = "text", Value = "value" }).Placeholder("Time Type").FloatLabelType(Syncfusion.EJ2.Inputs.FloatLabelType.Always).DataSource((IEnumerable<object>)@ViewBag.TimeType).Index(0).Render()
    </div>
    <div class="form-group col-md-12">
        @Html.EJS().NumericTextBoxFor(m => m.Time).ValidateDecimalOnType(true).Decimals(0).Format("N").Placeholder("Time").FloatLabelType(Syncfusion.EJ2.Inputs.FloatLabelType.Always).Min(1).Created("checknegativevalidationSick").Render()
    </div>
    <div class="form-group col-md-12">
        <div class="e-float-input e-control-wrapper">
            @Html.TextAreaFor(model => model.Comments, new { maxlength = 500, placeholder = "Comments", autocomplete = "off" })
            <span class="e-float-line"></span>
            @Html.Label("Comments", "Comments", new { @class = "e-float-text e-label-top" })
        </div>
    </div>
</div>
@Html.EJS().ScriptManager()