@model List<EntityModels.Models.BankAccountSettingDetail>
@{
    Layout = "~/Views/Shared/AdminMaster.cshtml";
}
<style>
    .modal-backdrop {
        z-index: 0 !important;
    }
</style>

<div class="addinvoice" style="padding-top:0px!important;">
    <div class="page-body headertopbox special_bg">
        <div class="page-header-main position-relative " style="height: 70px !important;">
            <h2>Bank Accounts</h2>
            <span class="pull-right">
                @if (Convert.ToString(ViewBag.StoreIDValue) != "0")
                {
                    <button type="button" data-toggle="modal" data-target="#IModal" class="buttonbox btnsubmit" style="margin-right:4px;padding-top:2px;float:right;">Add Bank Account</button>
                }
            </span>
        </div>
        
        <div class="datagrid">
            <div class="table-responsive" id="test">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th style="cursor:pointer">Item ID</th>
                            <th style="cursor:pointer">Account No</th>
                            <th style="cursor:pointer">Store Name</th>
                            <th style="cursor:pointer">Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ItemID</td>
                                <td>@item.AccountNo</td>
                                <td>@item.StoreName</td>
                                <td style="vertical-align:middle;text-align:center;width:5%" class="printarea img_with img_color" id="editdeleteid">
                                    @{
                                        var UserIdD = item.BankAccountID + "D";
                                    }
                                    <a href="#" onclick="return ComfirmDelete(@item.BankAccountID);" data-toggle="tooltip" data-placement="top" data-original-title="Delete"><img src="~/Content/Admin/images/trash-2.svg" alt="" /> </a>
                                    <div id="@UserIdD" class="divIDClass modal-popup modal-danger modal-message " style="position: fixed;  left:45%; width:300px; top: 10px; display:none">
                                        <div class="modal-content ">
                                            <div class="modal-header text-center">
                                                <i class="glyphicon glyphicon-trash"></i>
                                            </div>
                                            <div class="modal-title">Message</div>
                                            <div class="modal-body ">Are you sure you want to delete this Bank Account?</div>
                                            <div class="modal-footer" style="text-align:center">
                                                <a class="btn btn-danger" onclick="Delete(@item.BankAccountID);">Ok </a>
                                                <a class="btn" data-dismiss="modal" onclick="closemodal()">Cancel</a>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="popupStoreAlertValue" class="divIDClass modal-popup modal-danger modal-message" style="position: fixed;  left:45%; width:300px; top: 30%; display:none">
    <div class="modal-content ">
        <div class="modal-header text-center">
            <i class="glyphicon glyphicon-fire"></i>
        </div>
        <div class="modal-title">No Store Selected</div>
        <div class="modal-body ">Please Select Store.</div>
        <div class="modal-footer" style="text-align:center">
            <a class="btn btn-danger" data-dismiss="modal" onclick="closemodal()" ;>Ok </a>
        </div>
    </div>
</div>
<div class="modal fade" id="IModal" role="dialog">
    <div class="modal-dialog" style="width: 1290px;">
        <div class="modal-content" style="margin-top:7%">
            <div class="modal-header text-center">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Bank Account</h4>
            </div>
            <div class="modal-body">
                <div id="frmUserType" class="form-horizontal">
                    @{ Html.RenderAction("BankAccount", new EntityModels.Models.BankAccountSettingModel()); }
                </div>
            </div>
            <div class="modal-footer modal-delete-footer">
                <input form="UpLedger" type="button" class="buttonbox btnsubmit" value="Add" onclick="BankAccouneDetailAdd();" />
                <button type="button" class="buttonbox btncancel" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<script>
    var deletes = '@ViewBag.delete';
    var StoreIDValue = '@ViewBag.StoreIDValue';
    var ItemRequred = '@ViewBag.ItemRequred';
    var AccessRequired = '@ViewBag.AccessRequired';
</script>


<script type="text/javascript">
document.title = '@ViewBag.Title';
</script>
<script src="~/Form_JS/BankAccounts.js?version=@System.Configuration.ConfigurationManager.AppSettings["version"].ToString()"></script>