@using Syncfusion.EJ2
@using Syncfusion.EJ2.DropDowns
@model EntityModels.Models.TestVendorMaster
@Html.HiddenFor(m => m.StoreId)
@Html.HiddenFor(m => m.VendorId)
<div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                @Html.TextBoxFor(model => model.VendorName, new { maxlength = 300, placeholder = "Name", autocomplete = "off", @onkeyup = "SetCompanyName();" })
                <span class="e-float-line"></span>
                @Html.Label("VendorName", "Display Name", new { @class = "e-float-text e-label-top" })
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                @Html.TextBoxFor(model => model.CompanyName, new { maxlength = 100, placeholder = "Company Name", autocomplete = "off", @onkeyup = "SetPrintOnCheck();" })
                <span class="e-float-line"></span>
                @Html.Label("CompanyName", "Company Name", new { @class = "e-float-text e-label-top" })
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                @Html.TextBoxFor(model => model.PrintOnCheck, new { maxlength = 200, placeholder = "Print On check", autocomplete = "off" })
                <span class="e-float-line"></span>
                @Html.Label("PrintOnCheck", "Print On Check", new { @class = "e-float-text e-label-top" })
            </div>
        </div>
        <div class="form-group col-md-6">
            @Html.EJS().MaskedTextBoxFor(model => model.PhoneNumber).Mask("(000) 000-0000").Placeholder("Phone Number").FloatLabelType(Syncfusion.EJ2.Inputs.FloatLabelType.Always).Render()
        </div>

    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <div class="e-float-input e-control-wrapper">
                @Html.TextAreaFor(model => model.Address, new { maxlength = 500, placeholder = "Address", autocomplete = "off" })
                <span class="e-float-line"></span>
                @Html.Label("Address", "Address", new { @class = "e-float-text e-label-top" })
            </div>
        </div>
        @*<div class="form-group col-md-6">
                <div class="e-float-input e-control-wrapper">
                    @Html.TextAreaFor(model => model.Address2, new { maxlength = 500, placeholder = "Address 2", autocomplete = "off" })
                    <span class="e-float-line"></span>
                    @Html.Label("Address2", "Address 2", new { @class = "e-float-text e-label-top" })
                </div>
            </div>*@
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                @Html.TextBoxFor(model => model.City, new { maxlength = 50, placeholder = "City", autocomplete = "off" })
                <span class="e-float-line"></span>
                @Html.Label("City", "City", new { @class = "e-float-text e-label-top" })
            </div>
        </div>
        <div class="form-group col-md-6">
            @Html.EJS().DropDownList("State").Value(Model.State).Fields(new Syncfusion.EJ2.DropDowns.DropDownListFieldSettings { Text = "StateName", Value = "StateName" }).Placeholder("State").FloatLabelType(Syncfusion.EJ2.Inputs.FloatLabelType.Always).DataSource((IEnumerable<object>)@ViewBag.State).Index(0).Render()
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                @Html.TextBoxFor(model => model.Country, new { maxlength = 50, placeholder = "Country", @style = "text-transform: uppercase" })
                <span class="e-float-line"></span>
                @Html.Label("Country", "Country", new { @class = "e-float-text e-label-top" })
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                @Html.TextBoxFor(model => model.PostalCode, new { maxlength = 50, placeholder = "Postal Code", autocomplete = "off" })
                <span class="e-float-line"></span>
                @Html.Label("PostalCode", "Postal Code", new { @class = "e-float-text e-label-top" })
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                @Html.TextBoxFor(model => model.EMail, new { maxlength = 80, @class = "form-control", placeholder = "Email" })
                <span class="e-float-line"></span>
                @Html.Label("EMail", "Email", new { @class = "e-float-text e-label-top" })
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                @Html.TextBoxFor(model => model.Instruction, new { placeholder = "Instructions" })
                <span class="e-float-line"></span>
                @Html.Label("Instruction", "Instruction", new { @class = "e-float-text e-label-top" })
            </div>
        </div>
    </div>
    <div class="form-group col-md-6">
        <div class="e-float-input e-control-wrapper">
            @Html.TextBoxFor(model => model.AccountNumber, new { placeholder = "AccountNumber" })
            <span class="e-float-line"></span>
            @Html.Label("AccountNumber", "Account Number", new { @class = "e-float-text e-label-top" })
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            @Html.EJS().MultiSelect("MultiDepartmentId").Value(ViewBag.DepartmentID).Mode(VisualMode.Box).Placeholder("Select Department").DataSource((IEnumerable<object>)ViewBag.MultiDepartmentId).Fields(new MultiSelectFieldSettings { Text = "DepartmentName", Value = "DepartmentId" }).FloatLabelType(Syncfusion.EJ2.Inputs.FloatLabelType.Always).AllowFiltering(true).Filtering("onfiltering").Render()
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.EJS().CheckBoxFor(model => model.IsActive).Label("Active").Render()
        </div>
    </div>
</div>

@Html.EJS().ScriptManager()
