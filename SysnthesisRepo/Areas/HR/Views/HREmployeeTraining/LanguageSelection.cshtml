@{
    ViewBag.Title = "Westside Market – HR portal";
    Layout = "~/Views/Shared/AdminLogin.cshtml";
}
<style>
    .loginboxoage .field-validation-error span, .field-validation-error {
        color: #FFFFFF !important
    }

    .logobox img {
        display: block;
        margin: 0px auto;
        max-width: 70%;
        height: 120px;
        margin-top: -60px;
    }

    .fadeInDown {
        -webkit-animation-name: fadeInDown;
        animation-name: fadeInDown;
    }

    .animated {
        -webkit-animation-duration: 1s;
        animation-duration: 1s;
        -webkit-animation-fill-mode: both;
        animation-fill-mode: both;
    }
    .lg-sec h5 {
        font-size: 24px;
        font-weight: 500 !important;
        color:#fff;
        text-align:center;
    }
    .loginboxoage.lg-sec{height:350px;}
</style>
<div class="animated fadeInDown">
    <div>
        <div class="loginboxoage lg-sec">
            <div class="logobox">
                <img src="/images/ws-logo.png">
            </div>
            <h5>Preferred Language</h5>
            <div class="loginblock">
                <div class="formbox">
                    <div class="form-group">
                        <span style="font-family: 'Maven Pro', sans-serif !important;color: #fff; font-size: 14px;text-align: center; display: block; margin-left: auto;margin-right: auto ">
                            Please select your preferred language.
                        </span>
                        <br />
                        <div class="col-sm-6">
                            <a href="/HREmployeeTraining/SaveLanguageSelection?LanguageId=2">
                                <img src="~/images/spanish.png" />
                            </a>
                            <span style="font-family: 'Maven Pro', sans-serif !important;color: #fff; font-size: 16px;text-align: center;margin-left:17px;">Español</span>
                        </div>
                        <div class="col-sm-6">
                            <a href="/HREmployeeTraining/SaveLanguageSelection?LanguageId=1">
                                <img src="~/images/US English.png" />
                            </a>
                            <span style="font-family: 'Maven Pro', sans-serif !important;color: #fff; font-size: 16px;text-align: center;margin-left:40px;">US</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section FooterScript{
    <script type="text/javascript">

    </script>
}