                        <div class="row">
                            <div class="col-md-12 col-sm-12">
                                <div class="form-group">
                                    <label>Document Title</label><span class="highlight">*</span>

                                    @Html.TextBoxFor(model => model.Title, new { maxlength = 100, @class = "form-control required" })
