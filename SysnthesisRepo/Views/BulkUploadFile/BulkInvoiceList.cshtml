@model IEnumerable<EntityModels.Models.UploadFile>
@using EntityModels.Models
@using System.Configuration;
@using Utility
@using Syncfusion.EJ2
@{
    Layout = null;
}
<link href="~/Content/Admin/assets/css/beyond.min.css" rel="stylesheet" />
<link href="~/Content/Admin/assets/css/demo.min.css" rel="stylesheet" />
