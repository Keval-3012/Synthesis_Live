<script type="text/javascript">
    var storeid = '@Convert.ToString(Session["storeid"])';
    function ActiveStatus(iii) {

        $.ajax({
            url:'@AdminSiteConfiguration.GetURL()ChartofAccounts/ActiveStatus',
            data: { deptid: iii },
            beforeSend: function () { Loader(1); },
            async: false,
            success: function (states) {

                if (states == "OK") {

                    toastr.success('Status Active Successfully.');
                    var grid = document.getElementById("DepartmentIndex").ej2_instances[0];
                    grid.dataSource = new ej.data.DataManager({
                        url: "/ChartofAccounts/UrlDatasource",
                        adaptor: new ej.data.UrlAdaptor()
                    });
                }
                Loader(0);
            },
            error: function () {
                Loader(0);
            }
        });
    }
    function InActiveStatus(iii) {

        $.ajax({
            url: '@AdminSiteConfiguration.GetURL()ChartofAccounts/InActiveStatus',
            data: { deptid: iii },
            beforeSend: function () { Loader(1); },
            async: false,
            success: function (states) {

                if (states == "OK") {

                    toastr.success('Status InActive Successfully.');
                    var grid = document.getElementById("DepartmentIndex").ej2_instances[0];
                    grid.dataSource = new ej.data.DataManager({
                        url: "/ChartofAccounts/UrlDatasource",
                        adaptor: new ej.data.UrlAdaptor()
                    });
                }
                Loader(0);
            },
            error: function () {
                Loader(0);
            }
        });
    }
</script>
