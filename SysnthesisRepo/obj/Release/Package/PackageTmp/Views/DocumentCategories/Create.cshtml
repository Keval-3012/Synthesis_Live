@model EntityModels.Models.DocumentCategory
@{
    Layout = "~/Views/Shared/AdminMAster.cshtml";
    ViewBag.Title = "Create";
}
<div id="globalTabContent">
    <div id="PanAddUpdate">
        <div class="header-small special_bg">
            <h3>Add Document Category </h3>
        </div>
        @using (Html.BeginForm("Create", "DocumentCategories", FormMethod.Post, new { id = "frmuser" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="page-body headertopbox addinvoice" style="padding-top:0px!important;">
                <div class="datagrid martop15">
                    <div class="formmain">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        Document Category<span class="highlight">*</span>
                                    </label>
                                    @Html.TextBoxFor(model => model.Name, new { maxlength = 100, @class = "form-control" })
                                    <span class="highlight">     @Html.ValidationMessageFor(model => model.Name)</span>
                                </div>

                                <div class="form-group">
                                    &nbsp;&nbsp;&nbsp;&nbsp;  @Html.CheckBoxFor(model => model.IsActive, htmlAttributes: new { @class = "Remember", @style = "margin: 1px;position: absolute;left: 25px;width: 26px;height: 22px;display: inline;opacity: unset;z-index:10;" })
                                    <span class="text" style="font-size: 18px;margin-bottom: 8px;">Active</span>
                                </div>

                                <div class="from-group row">
                                    <div class="col-sm-8 ">
                                        <input type="submit" value="Add"
                                               class="buttonbox btnsubmit" />
                                        @Html.ActionLink("Cancel", "Index", new { id = @ViewBag.DocumentCategoryId }, new { @class = "buttonbox btncancel" })
                                    </div>
                                </div>
                            </div>
                        </div><br /><br />
                    </div>
                </div>
            </div>
            <div class="clear">
            </div>
        }

    </div>

</div>
<script src="~/Form_JS/DocumentCategories.js"></script>

@*}*@

