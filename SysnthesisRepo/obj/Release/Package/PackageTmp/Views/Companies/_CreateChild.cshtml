@model EntityModels.Models.StoreChild

@Html.HiddenFor(s=>s.StoreChildId)
<div class="formmain">
    <div class="form-group">
        <table class="table table-striped table-bordered bulk_action" style="margin-top:15px; width:100%">
            <thead>
                <tr style="background: #56524b; color: white">
                    <th style="color:#fff;" width="47%">
                        <label>
                            User Type<span class="highlight">*</span>
                        </label>
                    </th>

                    <th style="color:#fff;" width="47%">
                        <label>
                            User Name
                        </label>
                    </th>

                    <th style="color:#fff;" width="6%">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.EnumDropDownListFor(model => model.UserType,"-- Select --", new { maxlength = 100, @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UserType, "", new { @class = "highlight1" })
                    </td>
                    <td>
                        @Html.DropDownList("UserId", null, "-- Select --", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
                    </td>

                    <td>
                        <button type="submit" form="frmOs" class="btn btn-success"><i class="fa fa-plus"></i>Add</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>


    <div class="form-group">
        <div class="dataTables_wrapper form-inline dt-bootstrap no-footer">
            @{Html.RenderAction("PartialIndex", new { id = Model.StoreId });}
        </div>
    </div>
    </div>

