@model List<EntityModels.Models.RightsStore>
<style>
    #table1 {
        border: none;
    }

    .row1 {
        padding-top: 5px;
        border: 2px;
    }
    
    .col-md-1 {
        width: 10%;
    }

    .LabelRoles {
        padding-bottom: 10px;
    }
    hr {
        margin-top: 10px;
        margin-bottom: 10px;
    }
    .clsLeveldrp {
        height:30px !important;
        padding:2px 12px !important;
    }
    th {
        padding: 2px 20px !important;
    }
    p {
        font-size: small;
        color: #e53939;
    }
    .selected {
        background-color: lightblue !important;
    }
    /*.divlist {
        overflow-x: auto;
        white-space: nowrap;
    }

    divlist [class*="col"] {
        display: inline-block;
        float: none;
    }*/
</style>
@if (Model.Count > 0)
{


    <table id="table1" class="table table-striped table-bordered bulk_action dataTable no-footer" style="width:100%;border:none">
            <thead class="text-nowrap bg-primary" style="background: #56524b">
                <tr>
                    <th>
                        <label>Modules Name</label>
                    </th>
                    @foreach (var store in ViewBag.Stores)
                    {
                    <th>
                        <label> @store</label>
                    </th>
                    }
</tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td colspan="30" style="color:darkred">
                            @Html.HiddenFor(x => Model[i].ModuleName)
                            @Html.HiddenFor(x => Model[i].ModuleId)
                            @Html.HiddenFor(x => Model[i].UserTypeId)
                            @Html.DisplayFor(modelItem => Model[i].ModuleName)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label class="LabelRoles">View</label>
                        </td>
                        @foreach (var storeId in ViewBag.StoresIds)
                        {
                            <td class="text-align-center">
                                <input type="checkbox" value="@("View" + Model[i].ModuleName.Trim() + "_" + storeId + "_" + Model[i].ModuleId)" name="SelectedRoles" id="SelectedRoles" @((ViewBag.userRoles.Contains("View" + Model[i].ModuleName.Trim() + storeId)) ? "checked=\"checked\"" : "") class="Remember" style="margin: 1px;position: initial;left: 3%;width: 26px;height: 22px;display: inline;opacity: unset;"><span></span>
                            </td>
                        }
                    </tr>
                    <tr>
                        @if (Model[i].ModuleName.Trim() == "Invoice" || Model[i].ModuleName.Trim() == "Document")
                        {
                            <td>
                                <label class="LabelRoles">Create</label>
                            </td>
                            foreach (var storeId in ViewBag.StoresIds)
                            {
                                <td class="text-align-center">
                                    <input type="checkbox" value="@("Create" + Model[i].ModuleName.Trim() + "_" + storeId + "_" + Model[i].ModuleId)" name="SelectedRoles" id="SelectedRoles" @((ViewBag.userRoles.Contains("Create" + Model[i].ModuleName.Trim() + storeId)) ? "checked=\"checked\"" : "") class="Remember" style="margin: 1px;position: initial;left: 3%;width: 26px;height: 22px;display: inline;opacity: unset;" />
                                </td>
                            }
                        }
                    </tr>
                    <tr>
                        @if (Model[i].ModuleName.Trim() == "Invoice" || Model[i].ModuleName.Trim() == "Document")
                        {
                            <td>
                                <label class="LabelRoles">Update</label>
                            </td>
                            foreach (var storeId in ViewBag.StoresIds)
                            {
                                <td class="text-align-center">
                                    <input type="checkbox" value="@("Update" + Model[i].ModuleName.Trim() + "_" + storeId + "_" + Model[i].ModuleId)" name="SelectedRoles" id="SelectedRoles" @((ViewBag.userRoles.Contains("Update" + Model[i].ModuleName.Trim() + storeId)) ? "checked=\"checked\"" : "") class="Remember" style="margin: 1px;position: initial;left: 3%;width: 26px;height: 22px;display: inline;opacity: unset;">
                                </td>
                            }
                        }
                    </tr>
                    <tr>
                        @if (Model[i].ModuleName.Trim() == "Invoice" || Model[i].ModuleName.Trim() == "Document")
                        {
                            <td>
                                <label class="LabelRoles">Delete</label>
                            </td>
                            foreach (var storeId in ViewBag.StoresIds)
                            {
                                <td class="text-align-center">
                                    <input type="checkbox" value="@("Delete" + Model[i].ModuleName.Trim() + "_" + storeId + "_" + Model[i].ModuleId)" name="SelectedRoles" id="SelectedRoles" @((ViewBag.userRoles.Contains("Delete" + Model[i].ModuleName.Trim() + storeId)) ? "checked=\"checked\"" : "") class="Remember" style="margin: 1px;position: initial;left: 3%;width: 26px;height: 22px;display: inline;opacity: unset;">
                                </td>
                            }
                        }
                    </tr>

                    <tr>
                        @if (Model[i].ModuleName.Trim() == "Invoice" || Model[i].ModuleName.Trim() == "JournalEntries")
                        {
                            <td>
                                <label class="LabelRoles">Approve</label>
                                @if (Model[i].ModuleName.Trim() == "Invoice")
                                {
                                    <p>Send for Approve to:</p><span>
                                        @Html.DropDownList("RoleLevelId", null, "select", htmlAttributes: new { @class = "form-control clsLeveldrp" })
                                    </span>
                                }
                            </td>
                            foreach (var storeId in ViewBag.StoresIds)
                            {
                                <td style="text-align:center">
                                    <input type="checkbox" value="@("Approve" + Model[i].ModuleName.Trim() + "_" + storeId + "_" + Model[i].ModuleId)" name="SelectedRoles" id="SelectedRoles" @((ViewBag.userRoles.Contains("Approve" + Model[i].ModuleName.Trim() + storeId)) ? "checked=\"checked\"" : "") class="Remember" style="margin: 1px;position: initial;left: 3%;width: 26px;height: 22px;display: inline;opacity: unset;">
                                </td>
                            }
                        }
                    </tr>
                    <tr>
                        @if (Model[i].ModuleName.Trim() == "Invoice")
                        {
                            <td>
                                <label class="LabelRoles">Reject</label>
                            </td>
                            foreach (var storeId in ViewBag.StoresIds)
                            {
                                <td class="text-align-center">
                                    <input type="checkbox" value="@("Reject" + Model[i].ModuleName.Trim() + "_" + storeId + "_" + Model[i].ModuleId)" name="SelectedRoles" id="SelectedRoles" @((ViewBag.userRoles.Contains("Reject" + Model[i].ModuleName.Trim() + storeId)) ? "checked=\"checked\"" : "") class="Remember" style="margin: 1px;position: initial;left: 3%;width: 26px;height: 22px;display: inline;opacity: unset;">
                                </td>
                            }
                        }
                    </tr>
                    <tr>
                        @if (Model[i].ModuleName.Trim() == "Invoice")
                        {
                            <td>
                                <label class="LabelRoles">OnHold</label>
                                </td>
                            foreach (var storeId in ViewBag.StoresIds)
                            {
                            <td class="text-align-center">
                                <input type="checkbox" value="@("OnHold" + Model[i].ModuleName.Trim() + "_" + storeId + "_" + Model[i].ModuleId)" name="SelectedRoles" id="SelectedRoles" @((ViewBag.userRoles.Contains("OnHold" + Model[i].ModuleName.Trim() + storeId)) ? "checked=\"checked\"" : "") class="Remember" style="margin: 1px;position: initial;left: 3%;width: 26px;height: 22px;display: inline;opacity: unset;">
                            </td>
                            }
                        }
                    </tr>
                    <tr>
                        @if (Model[i].ModuleName.Trim() == "DailyPOSFeeds" || Model[i].ModuleName.Trim() == "PayrollReports")
                        {
                        <td>
                            <label class="LabelRoles">Upload</label>
                        </td>
                            foreach (var storeId in ViewBag.StoresIds)
                            {
                        <td class="text-align-center">
                            <input type="checkbox" value="@("Upload" + Model[i].ModuleName.Trim() + "_" + storeId + "_" + Model[i].ModuleId)" name="SelectedRoles" id="SelectedRoles" @((ViewBag.userRoles.Contains("Upload" + Model[i].ModuleName.Trim() + storeId)) ? "checked=\"checked\"" : "") class="Remember" style="margin: 1px;position: initial;left: 3%;width: 26px;height: 22px;display: inline;opacity: unset;">
                        </td>
                            }
                        }
                    </tr>
                    <tr>
                        @if (Model[i].ModuleName.Trim() == "COGsReport")
                        {
                        <td>
                            <label class="LabelRoles">Download</label>
                        </td>
                            foreach (var storeId in ViewBag.StoresIds)
                            {
                        <td class="text-align-center">
                            <input type="checkbox" value="@("Download" + Model[i].ModuleName.Trim() + "_" + storeId + "_" + Model[i].ModuleId)" name="SelectedRoles" id="SelectedRoles" @((ViewBag.userRoles.Contains("Download" + Model[i].ModuleName.Trim() + storeId)) ? "checked=\"checked\"" : "") class="Remember" style="margin: 1px;position: initial;left: 3%;width: 26px;height: 22px;display: inline;opacity: unset;">
                        </td>
                            }
                        }
                    </tr>
                    <tr>
                        @if (Model[i].ModuleName.Trim() == "OperatingRatioReport")
                        {
                        <td>
                            <label class="LabelRoles">PayrollComparision</label>
                        </td>
                            foreach (var storeId in ViewBag.StoresIds)
                            {
                        <td class="text-align-center">
                            <input type="checkbox" value="@("PayrollComparision" + Model[i].ModuleName.Trim() + "_" + storeId + "_" + Model[i].ModuleId)" name="SelectedRoles" id="SelectedRoles" @((ViewBag.userRoles.Contains("PayrollComparision" + Model[i].ModuleName.Trim() + storeId)) ? "checked=\"checked\"" : "") class="Remember" style="margin: 1px;position: initial;left: 3%;width: 26px;height: 22px;display: inline;opacity: unset;">
                        </td>
                            }
                        }
                    </tr>


                }

           
            </tbody>
        </table>
}