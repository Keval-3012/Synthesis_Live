@model EntityModels.Models.PayPeriodSettings
@{
    ViewBag.Title = "Edit Pay Cycle Settings";
    Layout = "~/Views/Shared/AdminMaster.cshtml";
}

<div id="globalTabContent">
    <div id="PanAddUpdate">
        <div class="header-small special_bg">
            <h3>Edit Pay Cycle </h3>
        </div>
        @using (Html.BeginForm("EditPayCycleSettings", "PayCycleSettings", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.HiddenFor(m => m.PayPeriodSettingId)
            @Html.HiddenFor(m => m.CreatedBy)
            @Html.HiddenFor(m => m.CreatedDate)
            <div class="page-body headertopbox addinvoice" style="padding-top:0px!important;">
                <div class="datagrid martop15">
                    <div class="formmain">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        Name<span class="highlight">*</span>
                                    </label>
                                    @Html.EnumDropDownListFor(model => model.Day, new { @class = "form-control"  })
                                    @Html.ValidationMessageFor(model => model.Day, "", new { @class = "highlight1" })
                                </div>
                            </div>
                        </div>

                        <div class="from-group row">
                            <div class="col-sm-8 ">
                                <input id="btnSave" type="submit" value="Update"
                                       class="buttonbox btnsubmit" />
                            </div>
                        </div>
                    </div>
                </div><br /><br />
            </div>
            <div class="clear">
            </div>
        }
    </div>   
</div>


