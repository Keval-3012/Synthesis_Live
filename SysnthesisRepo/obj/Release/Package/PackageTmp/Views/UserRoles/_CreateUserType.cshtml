@model EntityModels.Models.UserTypeMaster

<div id="globalTabContent">
    <div id="PanAddUpdate">
            <div class="page-body headertopbox addinvoice" style="padding-top:0px!important;">
                <div class="datagrid martop15">
                    <div class="formmain">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group" style="margin-left: 1%;">
                                    <label>
                                        User Role<span class="highlight">*</span>
                                    </label>
                                    @Html.TextBoxFor(model => model.UserType, new { maxlength = 100, @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.UserType, "", new { @class = "highlight1" })
                                    &nbsp;<span id="requ" style="color: red;"></span>
                                </div>
                                <div class="form-group" style="margin-left: 1%;">
                                    <label>
                                        Level <span class="highlight">*</span>
                                    </label>
                                    @Html.DropDownList("LevelsApproverId", null, "select", htmlAttributes: new { @class = "myval" })
                                    @Html.ValidationMessageFor(model => model.LevelsApproverId, "", new { @class = "highlight1" })
                                    &nbsp;<span id="ReqLvl" style="color: red;"></span>
                                </div>
                                <div class="form-group" style="margin-left: 1%;">
                                    @Html.CheckBoxFor(model => model.IsViewInvoiceOnly, htmlAttributes: new { @class = "Remember", @style = "margin: 1px;position: absolute;left: 15px;width: 26px;height: 22px;display: inline;opacity: unset;" })
                                    <label>
                                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;View Invoice Only
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>



