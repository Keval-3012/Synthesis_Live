@model EntityModels.Models.ApiKeyConfiguartion
@{
}

<script src='@Utility.AdminSiteConfiguration.GetURL()Content/Admin/assets/js/datetime/bootstrap-datepicker.js'></script>
<style>
    .highlight1 {
        color: red !important;
    }
</style>

<div id="globalTabContent">
    <div class="animate-panelmessesgarea padbtmzero">
    </div>
    <div id="PanAddUpdate">
        <div class="header-small special_bg">
            <h3>Edit API Key</h3>
        </div>

        @using (Html.BeginForm("Edit", "InvoiceMultithreadedProcess", FormMethod.Post, new { id = "frmuser" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.APIKeyId)

            <div class="page-body headertopbox addinvoice" style="padding-top:0px!important;">
                <div class="datagrid martop15">
                    <div class="formmain">

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        API Key Name <span class="highlight">*</span>
                                    </label>
                                    @Html.TextBoxFor(model => model.APIKeyName, new { maxlength = 200, @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.APIKeyName, "", new { @class = "highlight1" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        Bucket Size <span class="highlight">*</span>
                                    </label>
                                    @Html.TextBoxFor(model => model.BucketSize, new { maxlength = 5, @class = "form-control", @id = "Name" })
                                    @Html.ValidationMessageFor(model => model.BucketSize, "", new { @class = "highlight1" })
                                </div>
                            </div>
                        </div>

                        <div class="from-group row">
                            <div class="col-sm-8 ">
                                <input type="submit" value="Update" class="buttonbox btnsubmit" />
                                @Html.ActionLink("Cancel", "Index", new { id = @ViewBag.id }, new { @class = "buttonbox btncancel" })
                            </div>
                        </div>
                    </div>
                </div><br /><br />
            </div>
            <div class="clear">
            </div>
        }
    </div>
</div>

