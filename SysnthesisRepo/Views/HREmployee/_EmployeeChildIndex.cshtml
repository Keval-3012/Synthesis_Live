@model IEnumerable<SynthesisViewModal.HRViewModel.HREmployeeChildViewModal>

@if ((Model != null) && (Model.Count() > 0))
{
    <div class="col-md-12 col-sm-12 col-xs-12">
        <table id="list" style="width:100%" class="table table-striped table-bordered bulk_action">
            <thead>
                <tr>
                    <th hidden></th>
                    <th hidden></th>
                    <th hidden>Sr No</th>
                    <th>Employee Id</th>
                    <th>Hire Date</th>
                    <th>Store Name</th>
                    <th>Department Name</th>
                    <th>Employment Type</th>
                    <th>Status</th>
                    <th>Termination Date</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.OrderBy(o => o.SrNo))
                {
                    <tr>
                        <td hidden>
                            @Html.DisplayFor(modelItem => item.EmployeeChildId)
                        </td>
                        <td hidden>
                            @Html.DisplayFor(modelItem => item.EmployeeId)
                        </td>
                        <td hidden>
                            @Html.DisplayFor(modelItem => item.SrNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OfficeEmployeeID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sHireDate)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.StoreName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DepartmentName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmployeementTypeStatusName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StatusName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sTerminationDate)
                        </td>
                        <td>
                            <div class="pull-right">
                                @Ajax.ActionLink(" ", "EditChild", "HREmployee", new { srNo = item.SrNo }, new AjaxOptions { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "frmPartyChild", OnComplete = "javascript:setSelect2();", OnSuccess = "javascript:setSelect2();" }, htmlAttributes: new { data_modal = "data-modal", @class = "text-success fa fa-pencil", @style = "width: 22px;height: 22px;padding-top: 3px;" })
                                @Ajax.ActionLink(" ", "DeleteChild", "HREmployee", new { srNo = item.SrNo }, new AjaxOptions { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "frmPartyChild", OnComplete = "javascript:setSelect2();", OnSuccess = "javascript:setSelect2();" }, htmlAttributes: new { data_modal = "data-modal", @class = "text-danger fa fa-trash", @style = "width: 22px;height: 22px;padding-top: 3px;" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
}
