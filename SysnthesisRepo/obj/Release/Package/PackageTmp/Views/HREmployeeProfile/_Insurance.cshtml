@using Syncfusion.EJ2
@using Syncfusion.EJ2.DropDowns
@model EntityModels.HRModels.HREmployeeInsurance

@Html.HiddenFor(m => m.EmployeeId)
@Html.HiddenFor(m => m.EmployeeChildId)
@Html.HiddenFor(m => m.EmployeeInsuranceId)
@Html.HiddenFor(m => m.FileName)
<div class="form-row">
    <div class="form-group col-md-12">
        @Html.EJS().DatePickerFor(m => m.sEffectiveDate).Placeholder("Effective Date").FloatLabelType(Syncfusion.EJ2.Inputs.FloatLabelType.Always).EnableMask(true).Format("MM/dd/yyyy").Render()
    </div>
    <div class="form-group col-md-12">
        @Html.EJS().DropDownListFor(m => m.EnrollmentStatus).Fields(new Syncfusion.EJ2.DropDowns.DropDownListFieldSettings { Text = "text", Value = "value" }).Placeholder("Enrollment Status").FloatLabelType(Syncfusion.EJ2.Inputs.FloatLabelType.Always).DataSource((IEnumerable<object>)@ViewBag.EnrollmentStatus).Index(0).Render()
    </div>
    <div class="form-group col-md-12">
        @Html.EJS().Uploader("UploadFiles").DropArea(".control-fluid").AllowedExtensions(".pdf").AutoUpload(true).Multiple(false).AsyncSettings(new Syncfusion.EJ2.Inputs.UploaderAsyncSettings { SaveUrl = @Url.Content("~/HREmployeeProfile/Save"), RemoveUrl = @Url.Content("~/HREmployeeProfile/Remove") }).Success("onImageUploadSuccess").Render()
    </div>
    <div class="form-group col-md-12">
        <div class="e-float-input e-control-wrapper">
            @Html.TextAreaFor(model => model.Comments, new { maxlength = 500, placeholder = "Comments", autocomplete = "off" })
            <span class="e-float-line"></span>
            @Html.Label("Comments", "Comments", new { @class = "e-float-text e-label-top" })
        </div>
    </div>
</div>
@Html.EJS().ScriptManager()
