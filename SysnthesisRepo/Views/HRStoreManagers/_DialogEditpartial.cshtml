<style>
    .toggle-password {
        color: black !important;
        float: right;
        margin-left: -25px;
        margin-top: -25px;
        position: relative;
        margin-right: 5px;
        z-index: 9999 !important;
        font-size: large;
    }
</style>

<div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                @Html.TextBoxFor(model => model.FirstName, new { maxlength = 500, @class = "form-control", placeholder = "First Name" })
                @Html.Label("FirstName", "First Name", new { @class = "e-float-text e-label-top" })
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                @Html.TextBoxFor(model => model.UserName, new { maxlength = 500, @class = "form-control", placeholder = "Username" })
                @Html.Label("UserName", "User Name", new { @class = "e-float-text e-label-top" })
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                @Html.TextBoxFor(model => model.Password, new { maxlength = 500, @class = "form-control", placeholder = "Password", type = "password", onkeyup = "PasswordMatchCheck()" })
                <span toggle="#Password" class="fa fa-fw fa-eye field-icon toggle-password" onclick="PasswordHideShow(this);"></span>
                @Html.Label("Password", "Password", new { @class = "e-float-text e-label-top" })
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                @Html.TextBoxFor(model => model.ConfirmPassword, new { maxlength = 500, @class = "form-control", placeholder = "Confirm Password", type = "password", onkeyup = "PasswordMatchCheck()" })
                <span toggle="#ConfirmPassword" class="fa fa-fw fa-eye field-icon toggle-password" onclick="PasswordHideShow(this);"></span>
                @Html.Label("ConfirmPassword", "Confirm Password", new { @class = "e-float-text e-label-top" })
            </div>
            <div>
                <span id="password-error" class="error-message"></span>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-8">
            @Html.EJS().DropDownListFor(model => model.StoreId).Fields(new Syncfusion.EJ2.DropDowns.DropDownListFieldSettings { Text = "Text", Value = "Value" }).Placeholder("Select Store").FloatLabelType(Syncfusion.EJ2.Inputs.FloatLabelType.Always).DataSource((IEnumerable<object>)ViewBag.StoreName).Index(0).Render()
        </div>
    </div>
</div>

@Html.EJS().ScriptManager()
