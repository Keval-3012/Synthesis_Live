    function ChangeterminationDateContainer() {
        var selectedStatus = $("#Status").val();
        var label = $(".cssTerminationdate");

        if (selectedStatus === "0") {
            // Hide the Termination Date field
            $("#terminationDateContainer").hide();
        }
        else if (selectedStatus === "1") {
            // Hide the Termination Date field
            $("#terminationDateContainer").hide();
        }
        else {
            // Show the Termination Date field
            $("#terminationDateContainer").show();
            if (selectedStatus === "2") {
                label.text("Termination Date");
            } else if (selectedStatus === "3") {
                label.text("Deceased Date");
            } else if (selectedStatus === "4") {
                label.text("Resigned Date");
            }
        }
    }
</script>
