@model IEnumerable<EntityModels.Models.StoreChild>
<div class="datagrid martop15">
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <tr style="background-color:#4c4c4c;color:#fff">

                <th width="47%">
                    User Type
                </th>
                <th width="47%">
                    User Name
                </th>
                <th width="6%">Action</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr class="even">

                    <td>
                        @Html.DisplayFor(modelItem => item.UserType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserMasters.UserName)
                    </td>

                    <td>
                        @Ajax.ActionLink("Edit", "EditChild", "Companies", new { id = item.StoreChildId }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "frmChild" }) |

                        @Ajax.ActionLink("Delete", "DeleteChild", "Companies", new { id = item.StoreChildId }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "frmChild" }) |
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
