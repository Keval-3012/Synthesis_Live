@model List<EntityModels.Models.Invoice>

@{
    if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <tr class="even">
                <td style="vertical-align:middle;text-align:left;color: #3c7be5;">@Html.Raw(item.VendorName)</td>
                <td style="vertical-align:middle;text-align:left;">@Html.Raw(item.InvoiceType)</td>
                <td style="vertical-align:middle;text-align:left;color: #3c7be5;">@Html.Raw(item.InvoiceNumber)</td>
                <td style="vertical-align:middle;text-align:left;">@Html.Raw(item.strInvoiceDate)</td>
                <td style="vertical-align:middle;text-align:left;">@Html.Raw(item.TotalAmount)</td>
                <td style="vertical-align:middle;text-align:left;">@Html.Raw(item.PaymentType)</td>
            </tr>
        }
    }
    else
    {
        <tr><td colspan='6' style='text-align: center;'> Data Not Avalible..! </td></tr>
    }

}
