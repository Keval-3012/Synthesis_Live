
@model EntityModels.Models.StoreMaster
@{
}
@using Utility
<script src='@AdminSiteConfiguration.GetURL()Content/Admin/assets/js/datetime/bootstrap-datepicker.js'></script>

<style>
    .highlight1 {
        color: red !important;
    }
</style>
<div id="globalTabContent">

    <div id="PanAddUpdate">
        <div class="header-small special_bg">
            <h3>Edit Companies </h3>
        </div>

        @using (Html.BeginForm("Edit", "Companies", FormMethod.Post, new { id = "frmuser" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.StoreId)
            <div class="page-body headertopbox addinvoice" style="padding-top:0px!important;">
                <div class="datagrid martop15">
                    <div class="formmain">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>
                                        Group<span class="highlight">*</span>
                                    </label>
                                    @Html.DropDownList("GroupId", null, "-- Select --", htmlAttributes: new { @class = "form-control myval" })
                                    @Html.ValidationMessageFor(model => model.GroupId, "", new { @class = "highlight1" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>
                                        Store Name<span class="highlight">*</span>
                                    </label>
                                    @Html.TextBoxFor(model => model.Name, new { maxlength = 100, @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "highlight1" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>
                                        Nick Name<span class="highlight">*</span>
                                    </label>
                                    @Html.TextBoxFor(model => model.NickName, new { maxlength = 100, @class = "form-control" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>
                                        Address1 <span class="highlight">*</span>
                                    </label>
                                    @Html.TextBoxFor(model => model.Address1, new { maxlength = 100, @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Address1, "", new { @class = "highlight1" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>
                                        Address2
                                    </label>
                                    @Html.TextBoxFor(model => model.Address2, new { maxlength = 100, @class = "form-control" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>
                                        Phone Number <span class="highlight">*</span>
                                    </label>
                                    @Html.TextBoxFor(model => model.StoreNo, new { maxlength = 100, @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.StoreNo, "", new { @class = "highlight1" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>
                                        Fax Number <span class="highlight">*</span>
                                    </label>
                                    @Html.TextBoxFor(model => model.FaxNo, new { maxlength = 100, @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.FaxNo, "", new { @class = "highlight1" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>
                                        Email Id <span class="highlight">*</span>
                                    </label>
                                    @Html.TextBoxFor(model => model.EmailId, new { maxlength = 100, @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "highlight1" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>
                                        State<span class="highlight">*</span>
                                    </label>
                                    @Html.DropDownList("StateId", null, "-- Select --", htmlAttributes: new { @class = "form-control myval", autofocus = true })
                                    @Html.ValidationMessageFor(model => model.GroupId, "", new { @class = "highlight1" })
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    &nbsp;  @Html.CheckBoxFor(model => model.IsActive, htmlAttributes: new { @class = "Remember", @style = "margin: 1px;position: absolute;left: 15px;width: 26px;height: 22px;display: inline;opacity: unset;" })
                                    <span class="text" style="font-size: 18px;margin-bottom: 8px;">Active</span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>
                                        Radius
                                    </label>
                                    @Html.TextBoxFor(model => model.Radius, new { maxlength = 100, @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Radius, "")
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>
                                        Longitude
                                    </label>
                                    @Html.TextBoxFor(model => model.Longitude, new { maxlength = 100, @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Longitude, "")
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>
                                        Latitude
                                    </label>
                                    @Html.TextBoxFor(model => model.Latitude, new { maxlength = 100, @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Latitude, "")
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        }

        <div class="page-body headertopbox addinvoice" style="padding-top:0px!important;">
            <div class="datagrid martop15">
                <div class="formmain">
                    <div class="col-sm-8 ">
                        <input type="submit" value="Update" form="frmuser" class="buttonbox btnsubmit" />
                        @Html.ActionLink("Cancel", "Index", new { id = @ViewBag.id }, new { @class = "buttonbox btncancel" })
                    </div>
                </div>

                <br /><br />
            </div>
        </div>
        <hr />
    </div>
</div>
<script>
    document.getElementById('StoreNo').addEventListener('input', function (e) {
        var x = e.target.value.replace(/\D/g, '').match(/(\d{0,3})(\d{0,3})(\d{0,4})/);
        e.target.value = !x[2] ? x[1] : '(' + x[1] + ') ' + x[2] + (x[3] ? '-' + x[3] : '');
    });

    document.getElementById('FaxNo').addEventListener('input', function (e) {
        var x = e.target.value.replace(/\D/g, '').match(/(\d{0,3})(\d{0,3})(\d{0,4})/);
        e.target.value = !x[2] ? x[1] : '(' + x[1] + ') ' + x[2] + (x[3] ? '-' + x[3] : '');
    });
</script>
<script src="~/Form_JS/Companies.js?version=@System.Configuration.ConfigurationManager.AppSettings["version"].ToString()"></script>

