@model IEnumerable<EntityModels.Models.InvoiceLookup>
<div class="datagrid">
    <div class="table-responsive" id="test">

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Store Name</th>
                    <th>Payment Type</th>
                    <th>Invoice Number</th>
                    <th>Invoice Date</th>
                </tr>
            </thead>
            <tbody>

                @if (Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr class="even" style="font-family: 'Muli', sans-serif;">
                            <td>
                                @item.StoreName
                            </td>
                            <td>
                                @item.PaymentType
                            </td>
                            <td>
                                @item.InvoiceNumber
                            </td>
                            <td>
                                @item.InvoiceDate
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

