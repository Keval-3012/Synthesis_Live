        <div class="notes-module-container">
            <div class="add-note">
                <h2>Add Note</h2>
                <input type="hidden" id="noteIdHidden" />
                <input type="text" id="noteTitle" placeholder="Note Name" style="display:none;" />
                <div id="noteEditor" style="height: 200px"></div>
                <!-- Quill editor container -->
                <div class="actionButtons">
                    <button class="save" id="saveNote">Save</button>
                    <button class="cancel" id="cancelNote">Cancel</button>
                </div>
            </div>
            <div class="note-listing">
                @foreach (var note in Model.UserNoteList)
                {
                    <div class="note">
                        <input type="hidden" class="noteId" value="@note.NoteId" />
                        <div class="note-header">
                            @if (note.InvoiceId != null)
                            {
                                <h2>
                                    <a href="/Invoices/Details/@note.InvoiceId" style="color: #385585 !important ;cursor:pointer;">Invoice # - @note.NoteName</a>
                                </h2>
                            }
                            else
                            {
                                <h2 style="color: #000 !important">@note.NoteName</h2>
                            }
                            <div class="actionBar">
                                <div id="deleteNote_@note.NoteId" class="deleteNt">
                                    <img src="~/Content/Admin/images/icons/delete.svg"
                                         alt="Delete" />
                                </div>

                                <div id="editNote_@note.NoteId" class="editNt">
                                    <img src="~/Content/Admin/images/icons/edit-05.svg"
                                         alt="Edit" />
                                </div>
                            </div>
                        </div>
                        <div class="note-body">
                            <span>
                                @Html.Raw(note.NoteDescription)
                            </span>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="task-module-container" style="display: none">
            <div class="add-task">
                <h2>Add Task</h2>
                <input type="hidden" id="taskIdHidden" />
                <input type="text" id="taskName" placeholder="Task Name" />
                <textarea name="taskDescription" id="taskDescription" cols="30" rows="10" placeholder="Task Description"></textarea>
                <div class="taskControls">
                    <div class="taskControlGroup">
                        <label>Priority <span style="color:red;">*</span></label>
                        @Html.DropDownList("PriorityDropData", null, "-Select Priority-", htmlAttributes: new { @class = "myval" })
                    </div>
                    <div class="taskControlGroup">
                        <label>Assigned to <span style="color:red;">*</span></label>
                        @Html.DropDownList("UserDropData", null, "-Select User-", htmlAttributes: new { @class = "myval" })
                    </div>
                    <div class="taskControlGroup">
                        <label>Due Date <span style="color:red;">*</span></label>
                        <input type="date" id="dueDate" />
                    </div>
                </div>
                <div class="actionButtons">
                    <button class="save" id="saveTask">Save</button>
                    <button class="cancel" id="cancelTask">Cancel</button>
                </div>
            </div>
            <div class="task-listing">
                @foreach (var task in Model.UserTaskList.OrderBy(task => task.IsCompleted))
                {
                    <div class="@(task.DueDate.HasValue ? (task.DueDate.Value.Date == DateTime.Today && !task.IsCompleted ? "task dueToday" : (task.DueDate.Value.Date < DateTime.Today && !task.IsCompleted ? "task overDue" : "task")) : "task")">
                        @*<div class="@(task.DueDate.HasValue && task.DueDate.Value.Date == DateTime.Today ? "task dueToday" : "task")">*@
                        <input type="hidden" class="taskId" value="@task.TaskId" />
                        <div class="taskHeader">

                            @if (task.DueDate.HasValue && task.DueDate.Value.Date != DateTime.Today || task.IsCompleted)
                            {
                                <span class="dueDate">@task.DueDate.Value.ToString("dd-MMM-yyyy")</span>
                            }
                            else
                            {
                                <span class=""></span>
                            }

                            <div class="task-row">
                                @if (task.IsCompleted)
                                {
                                    <button id="markAsCompletedBtn" class="mark-completed completed" data-status="completed">
                                        <span class="completed-content">
                                            <img src="~/Content/Admin/images/icons/mark-as-completed.svg" class="completed-icon" />
                                            <span class="button-text">Completed</span>
                                        </span>
                                    </button>
                                }
                                else
                                {
                                    if (task != null && Session["UserId"] != null && task.Createdby == Convert.ToInt32(Session["UserId"].ToString()))
                                    //if (task.Createdby == Convert.ToInt32(Session["UserId"].ToString()))
                                    {
                                        <div class="deleteTask">
                                            <img src="~/Content/Admin/images/icons/delete.svg" alt="Delete" />
                                        </div>
                                        <div class="editTask">
                                            <img src="~/Content/Admin/images/icons/edit-05.svg" alt="Edit" />
                                        </div>
                                    }
                                    <button id="markAsCompletedBtn" class="mark-completed" data-status="mark-as-completed">
                                        <span class="button-content">
                                            <img src="~/Content/Admin/images/icons/completed-note.svg" class="default-icon" />
                                            <span class="button-text">Mark as Completed</span>
                                        </span>
                                    </button>
                                }
                            </div>
                        </div>
                        @if (task.InvoiceId != null)
                        {
                            <h1>
                                <a href="/Invoices/Details/@task.InvoiceId" style="color: #385585;cursor:pointer;">Invoice # - @task.TaskName</a>
                            </h1>
                        }
                        else
                        {
                            <h1>@task.TaskName</h1>
                        }
                        <h2>@task.TaskDescription</h2>
                        @if (task != null && Session["UserId"] != null)
                        {
                            int userId = Convert.ToInt32(Session["UserId"].ToString());

                            if (task.AssignTo == userId && task.Createdby == userId)
                            {
                                <span class="assignedBy">Assigned by <a href="#">Me</a></span>
                            }
                            else if (task.AssignTo == userId && task.Createdby != userId)
                            {
                                <span class="assignedBy">Assigned by <a href="#">@task.AssignByName</a></span>
                            }
                            else
                            {
                                <span class="assignedBy">Assigned to <a href="#">@task.AssignToName</a></span>
                            }
                        }
                    </div>
                }
            </div>

        </div>
