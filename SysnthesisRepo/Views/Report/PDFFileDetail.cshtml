@model EntityModels.Models.DailyPosFeedsDetails
@using Utility
@{ ViewBag.Title = "Detail";
                Layout = "~/Views/Shared/AdminMAster.cshtml"; }
<style>
    .divIDClass {
        z-index: 999999 !important;
    }
</style>
<div id="grddata">
    <div class="header-small special_bg icon_12">
        <h3>Detail <a href="@Url.Action("DailyPosFeeds", "Report")" style="display:none;" class="pull-right addstore" data-toggle="tooltip" data-placement="bottom" title="Back"><img src="~/Content/Admin/images/chevron-left.svg" alt="" /></a></h3>
    </div>
    <div class="page-body headertopbox addinvoice" style="padding-top:0px!important;">
        <div class="datagrid martop15">
            <div class="table-responsive">
                <table class="table table-striped table-hover normal_fnt marginbtm20 buletable">
                    <thead>
                        <tr>
                            <th width="250">Basic Detail</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tr>
                        @{ var datestart = AdminSiteConfiguration.GetDatetimeformatwithAMPM(Convert.ToString(Model.StartDate));
                                        var dateEnd = AdminSiteConfiguration.GetDatetimeformatwithAMPM(Convert.ToString(Model.TransactionEndTime)); }
                        <td width="250">Transaction Time:</td>
                        <td>@datestart - @dateEnd</td>
                    </tr>
                    <tr>
                        <td>Terminal:</td>
                        <td>@Model.TerminalName</td>
                    </tr>
                    <tr>
                        <td>Customer Count:</td>
                        <td> @Model.CustomerCount </td>
                    </tr>
                    <tr>
                        <td> Net Sales With Tax:</td>
                        <td>$ @AdminSiteConfiguration.PriceWithComma(Convert.ToString(@Model.NetSalesWithTax)) </td>
                    </tr>
                    <tr>
                        <td> Total Tax Collected:</td>
                        <td>$ @AdminSiteConfiguration.PriceWithComma(Convert.ToString(@Model.TotalTaxCollected)) </td>
                    </tr>
                    <tr>
                        <td> Average Sale:</td>
                        <td>$ @AdminSiteConfiguration.PriceWithComma(Convert.ToString(@Model.AverageSale)) </td>
                    </tr>
                </table>
                @{ if (Model.TenderList.Count > 0)
                                {
                    <table class="table table-striped table-hover normal_fnt marginbtm20 buletable">
                        <thead>
                            <tr>
                                <th width="250"> Tenders In Drawer Report</th>
                                <th></th>
                            </tr>
                        </thead>
                        @{ for (var j = 0; j < Model.TenderList.Count; j++)
                                            {
                            <tr>
                                <td>@Model.TenderList[j].TendersTitle</td>
                                <td>$ @AdminSiteConfiguration.PriceWithComma(Convert.ToString(@Model.TenderList[j].TendersAmount)) </td>
                            </tr> } }
                    </table> } }
                @{ if (Model.DepartmentList.Count > 0)
                                {
                    <table class="table table-striped table-hover normal_fnt marginbtm20 buletable">
                        <thead>
                            <tr>
                                <th width="250">Department Net Sales Report</th>
                                <th></th>
                            </tr>
                        </thead>
                        @{ for (var k = 0; k < Model.DepartmentList.Count; k++)
                                            {
                            <tr>
                                <td>@Model.DepartmentList[k].DeptNetSalesTitle</td>
                                <td>$ @AdminSiteConfiguration.PriceWithComma(Convert.ToString(@Model.DepartmentList[k].DeptAmount)) </td>
                            </tr> } }
                    </table> } }
                @{ if (Model.Paidoutlist.Count > 0)
                                {
                                    <tr>
                                        <td>@Model.Paidoutlist[l].PaidOutTitle</td>
                                        <td>$ @Model.Paidoutlist[l].PaidOutAmount</td>
                                    </tr>
                                }
                            }
                        </table>
                    }
                }
            </div>
        </div>
    </div>
</div>
