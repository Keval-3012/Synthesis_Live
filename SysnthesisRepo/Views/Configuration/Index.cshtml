                                                                <label id="@memoidval"> @item.memo</label>
                                                                @Html.Hidden("memoidval", item.memo)
                                                                @Html.Hidden("Flag", item.flag)
                                                            </td>
                                                            <td>
                                                                @if (Roles.IsUserInRole("Administrator"))
                                                                {
                                                                    <a href="javascript:void(0);"
                                                                       onclick="openResetPopup('@item.tendername', '@item.Storeid')"
                                                                       class="modl">
                                                                        <img src="/Content/Admin/images/icons8-reset-35.png" alt="" style="width:25px;" title="Reset" />
                                                                    </a>
                                                                }
                                                            </td>
                                                        </tr>
                                                        j++;
                                                    }
                                                    <tr>
                                                        <td colspan="5"></td>
                                                    </tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr><td colspan="2">No Data Found</td></tr>
                                            }
                                        }



                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

}
<div id="resetConfirmPopup" class="divIDClass modal-popup modal-danger modal-message max_widht300" style="position: fixed; display:none">
    <div class="modal-content">
        <div class="modal-header text-center">
            <i class="glyphicon glyphicon-warning-sign"></i>
        </div>
        <div class="modal-title">Reset Confirmation</div>
        <div class="modal-body">Are you sure you want to reset this group?</div>
        <div class="modal-footer" style="text-align:center">
            <a class="btn btn-danger" onclick="confirmReset()">Yes</a>
            <a class="btn btn-default" onclick="closeResetPopup()">Cancel</a>
        </div>
    </div>
</div>

