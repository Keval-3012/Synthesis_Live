@using Syncfusion.EJ2
@using Syncfusion.EJ2.DropDowns
@model EntityModels.HRModels.HREmployeeDocument

@Html.HiddenFor(m => m.EmployeeId)
@Html.HiddenFor(m => m.EmployeeChildId)
@Html.HiddenFor(m => m.FileName)
<div class="form-row">
    <div class="form-group col-md-12">
        @Html.EJS().Uploader("UploadFiles").DropArea(".control-fluid").AllowedExtensions(".pdf").AutoUpload(true).Multiple(false).AsyncSettings(new Syncfusion.EJ2.Inputs.UploaderAsyncSettings { SaveUrl = @Url.Content("~/HREmployeeProfile/SaveDocuments?EmployeeId="+Model.EmployeeId + "&Type=1"), RemoveUrl = @Url.Content("~/HREmployeeProfile/RemoveDocuments?EmployeeId=" + Model.EmployeeId + "&Type=1") }).Success("onImageUploadSuccess").Render()
    </div>
    <div class="form-group col-md-12">
        <div class="e-float-input e-control-wrapper">
            @Html.TextAreaFor(model => model.Comments, new { maxlength = 500, placeholder = "Comments", autocomplete = "off" })
            <span class="e-float-line"></span>
            @Html.Label("Comments", "Comments", new { @class = "e-float-text e-label-top" })
        </div>
    </div>
</div>
@Html.EJS().ScriptManager()
