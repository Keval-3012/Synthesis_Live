@using Syncfusion.EJ2
@using Syncfusion.EJ2.DropDowns
@model EntityModels.HRModels.HREmployeeNotes

@Html.HiddenFor(m => m.EmployeeId)
@Html.HiddenFor(m => m.EmployeeChildId)
@Html.HiddenFor(m => m.EmployeeNoteId)
<div class="form-row">
    <div class="form-group col-md-12">
        <div class="e-float-input e-control-wrapper">
            @Html.TextAreaFor(model => model.Notes, new { maxlength = 500, placeholder = "Notes", autocomplete = "off" })
            <span class="e-float-line"></span>
            @Html.Label("Notes", "Notes", new { @class = "e-float-text e-label-top" })
        </div>
    </div>
</div>
@Html.EJS().ScriptManager()