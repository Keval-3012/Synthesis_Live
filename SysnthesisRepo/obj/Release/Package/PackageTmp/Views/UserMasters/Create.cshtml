@model EntityModels.Models.UserMaster
@{
}
<script src="~/Content/Scripts/jquery.validate.min.js"></script>

<style>
    .highlight1 {
        color: red !important;
    }

    .toggle-password {
        color: black !important;
        float: right;
        margin-left: -25px;
        margin-top: -33px;
        position: relative;
        margin-right: 5px;
        z-index: 9999 !important;
        font-size: large;
    }
</style>

<div id="globalTabContent">
    <div id="PanAddUpdate">
        <div class="header-small special_bg">
            <h3>Add User </h3>
        </div>
        @using (Html.BeginForm("Create", "UserMasters", FormMethod.Post, new { id = "frmuser" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="page-body headertopbox addinvoice" style="padding-top:0px!important;">
                <div class="datagrid martop15">
                    <div class="formmain">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        Name<span class="highlight">*</span>
                                    </label>
                                    @Html.TextBoxFor(model => model.FirstName, new { maxlength = 100, @class = "form-control", @id = "Name" })
                                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "highlight1" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        User Name <span class="highlight">*</span>
                                    </label>
                                    @Html.TextBoxFor(model => model.UserName, new { maxlength = 100, @class = "form-control", autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "highlight1" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        Password <span class="highlight">*</span>
                                    </label>
                                    @Html.PasswordFor(model => model.Password, new { maxlength = 100, @class = "form-control" })
                                    <span toggle="#Password" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "highlight1" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        Confirm Password <span class="highlight">*</span>
                                    </label>
                                    @Html.PasswordFor(model => model.ConfirmPassword, new { maxlength = 100, @class = "form-control" })
                                    <span toggle="#ConfirmPassword" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "highlight1" })
                                    <span id='message'></span>

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        Group<span class="highlight">*</span>
                                    </label>
                                    @Html.DropDownList("GroupId", null, "-- Select --", htmlAttributes: new { @class = "myval", onchange = "getUserTypeData();" })
                                    @Html.ValidationMessageFor(model => model.GroupId, "", new { @class = "highlight1" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        User Role<span class="highlight">*</span>
                                    </label>
                                    @Html.DropDownList("UserTypeId", null, "-- Select --", htmlAttributes: new { @class = "myval" })
                                    @Html.ValidationMessageFor(model => model.UserTypeId, "", new { @class = "highlight1" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        Email Address
                                    </label>
                                    @Html.TextBoxFor(model => model.EmailAddress, new { maxlength = 100, @class = "form-control", autocomplete = "off" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    &nbsp;&nbsp;&nbsp;&nbsp;  @Html.CheckBoxFor(model => model.IsActive, htmlAttributes: new { @class = "Remember", @style = "margin: 1px;position: absolute;left: 25px;width: 26px;height: 22px;display: inline;opacity: unset;z-index:10;" })
                                    <span class="text" style="font-size: 18px;margin-bottom: 8px;">Active</span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    &nbsp;&nbsp;&nbsp;&nbsp;  @Html.CheckBoxFor(model => model.TrackHours, htmlAttributes: new { @class = "Remember", @style = "margin: 1px;position: absolute;left: 25px;width: 26px;height: 22px;display: inline;opacity: unset;z-index:10;" })
                                    <span class="text" style="font-size: 18px;margin-bottom: 8px;">Track Hours</span>
                                </div>
                            </div>
                        </div>
                        @*<div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    &nbsp;&nbsp;&nbsp;&nbsp;  @Html.CheckBoxFor(model => model.IsHRAdmin, htmlAttributes: new { @class = "Remember", @style = "margin: 1px;position: absolute;left: 25px;width: 26px;height: 22px;display: inline;opacity: unset;z-index:10;" })
                                    <span class="text" style="font-size: 18px;margin-bottom: 8px;">HRAdmin</span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    &nbsp;&nbsp;&nbsp;&nbsp;  @Html.CheckBoxFor(model => model.IsHRSuperAdmin, htmlAttributes: new { @class = "Remember", @style = "margin: 1px;position: absolute;left: 25px;width: 26px;height: 22px;display: inline;opacity: unset;z-index:10;" })
                                    <span class="text" style="font-size: 18px;margin-bottom: 8px;">HRSuperAdmin</span>
                                </div>
                            </div>
                        </div>*@
                        <div class="from-group row">
                            <div class="col-sm-8 ">
                                <input id="btnSave" type="submit" value="Add"
                                       class="buttonbox btnsubmit" />
                                @Html.ActionLink("Cancel", "Index", new { id = @ViewBag.id }, new { @class = "buttonbox btncancel" })
                            </div>
                        </div>
                    </div>
                </div><br /><br />
            </div>
            <div class="clear">
            </div>
        }
    </div>
</div>

<script>
    var top = 0;
</script>
<script src="~/Form_JS/UserMasters.js"></script>

