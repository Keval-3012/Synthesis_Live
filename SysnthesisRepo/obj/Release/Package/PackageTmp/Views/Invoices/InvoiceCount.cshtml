@model IEnumerable<EntityModels.Models.InvoiceCount>
@using Utility
@using EntityModels.Models
@{
    DBContext db = new DBContext(); }
<style>
    .no-data-message {
        font-size: 15px;
        color: red;
    }

    .exportPdfButton, .exportExcelButton {
        border: 0;
        display: flex;
        align-items: center;
        margin: 0 0px 0 0;
        margin-left: auto;
    }

    .top-btn-sec {
        display: flex;
        align-items: center;
        margin-left: auto;
    }

    .exportPdfButton button, .exportExcelButton button {
        border: 0;
    }

    .div_flex {
        display: flex;
        align-items: center;
        justify-content:flex-start;
        gap:15px;
        margin:0 0 15px;
    }
    .searchfinal{margin:0;}
    .marginbtm15 {
        width: 100%;
    }

    .dateclass {
        width: 8%;
    }
</style>

<div class="header-small special_bg marleftzero">
    <h3>Invoice Count</h3>
</div>

<div id="grddata">
    <div class="page-body headertopbox addinvoice">
        <div class="datagrid martop15">
            <div class="div_flex">
                <div class="dateclass">
                    <input name="txtstartdate" type="text" maxlength="100" id="txtstartdate" placeholder="From" class="datepicker form-control" onkeydown="return false">
                </div>
               
                <select id="drpInvoiceType" class="pull-right">
                    <option value="1">Invoice</option>
                    <option value="2">Credit Memo</option>
                </select>
                <input type="submit" name="btnSearch" value="Search" id="btnSearch" onclick="javascript:populatedata();" class="searchfinal" />
               
            </div>
            <div class="table-responsive" style="position:relative; min-height: 300px;">

                <table class="table table-striped table-hover tablecolor">
                    <thead>
                        <tr>
                            <th style="text-align:left;width:15%">Store</th>
                            <th style="text-align:center; width:10%">Total Count</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
                <div align="center">
                    <label class="no-data-message" style="display:none">No data available</label>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Form_JS/InvoiceCount.js"></script>
<script>
    $(document).ready(function () {

        $('#txtstartdate').datetimepicker({
            format: 'MMM-YYYY',
            useCurrent: false,
            daysOfWeekDisabled: [0, 6]

        });
    });
</script>

